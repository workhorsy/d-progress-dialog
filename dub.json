{
	"name": "d-progress-dialog",
	"description": "A simple progress dialog for the D programming language",
	"authors": [
		"Matthew Brennan Jones <matthew.brennan.jones@gmail.com>",
	],
	"homepage": "https://github.com/workhorsy/d-progress-dialog",
	"copyright": "Copyright (c) 2017 Matthew Brennan Jones",
	"license": "BSL-1.0",
	"importPaths": ["source/"],
	"targetPath": "lib",
	"sourceFiles-windows": ["source/win_app.def"],

	"configurations": [
		{
			"name": "default",
			"targetName": "progress_dialog",
			"targetType": "staticLibrary",
			"dependencies": {
				"d-glob": "~>0.2.0",
			},
			"subConfigurations": {
				"dlangui": "minimal"
			}
		},
		{
			"name": "unittest",
			"targetName": "progress_dialog-test",
			"targetType": "executable",
			"mainSourceFile": "test/main.d",
			"dependencies": {
				"bdd": "~>1.3.0",
				"d-glob": "~>0.2.0",
			},
		},
	],
}
